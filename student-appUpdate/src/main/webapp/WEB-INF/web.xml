<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<display-name>student-app</display-name>
	<welcome-file-list>
		<welcome-file>student.html</welcome-file>
		
	</welcome-file-list>
	<servlet>
		<servlet-name>DispatcherServlet</servlet-name> <!-- servlet name can be anything -->
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>DispatcherServlet</servlet-name>
		<url-pattern>*.student</url-pattern> <!--  universal url pattern  (.name can anything)-->
	</servlet-mapping>
	
	
	
	
